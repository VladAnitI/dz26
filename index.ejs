<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>products</title>
  <link rel="stylesheet" href="./style.css">
</head>

<body>
  <div class="wrapper">
    <div class="leftContainer">
      <a href="/products" class="btn-get-product">Получить товары</a>
      <div class="products-container">
        <ul id="left-products">
        </ul>
      </div>
    </div>
    <div class="middleContainer">
      <h1>ДЗ #25</h1>
      <div class="middleContainer__btns">
        <div id="resetButton">RESET</div>
        <button class="btn-add-product"><span>Добавить товар</span> </button>
        <button class="btn-add-sales"><span>Добавить акции</span> </button>
      </div>
    </div>
    <div class="rightContainer">
      <a href="/products-action" class="btn-get-product">Получить акционные</a>
      <div class="products-container">
        <ul>
          <% if (productsSale.length) { %>
            <% productsSale.forEach(product=> { %>
              <li>
                <span>
                  <%= product.title %>
                </span>
                <div class="prices">
                  <span class="price">[<%= product.price %>]</span>
                  <span class="new-price">[<%= product.newPrice %>]</span>
                </div>
              </li>
              <% }) %>
                <% } %>
        </ul>
      </div>
    </div>
  </div>

  <!-- модальное окно формы -->
  <div id="add-product-modal" class="modal" action="/add-product" method="POST">
    <form id="add-product-form" class="modal-content">
      <h2>Добавление товара</h2>
      <div class="form-group">
        <label for="title">Название товара:</label>
        <input type="text" id="title" name="title" required>
      </div>
      <div class="form-group">
        <label for="price">Цена товара:</label>
        <input type="number" id="price" name="price" required>
      </div>
      <div class="form-group">
        <button type="submit">Добавить товар</button>
      </div>
    </form>
  </div>

  <script src="script.js"></script>
  <script src="onOne.js"></script>
</body>

</html>